include catppuccin-mocha

exec swaync
#exec mako
exec waybar
exec_always gammastep
exec corectrl

font pango:FireCode Nerd Font Regular 4px

default_border pixel 1
gaps inner  5
gaps outer  5
smart_borders on
#smart_gaps on

#assign       [app_id="wezterm"] 1
assign 		[class="Spotify"] 	5

set $mod Mod4
set $left  h
set $down  j
set $up    k
set $right l
set $term wezterm
set $menu fuzzel | xargs swaymsg exec -- 
set $file-manager thunar

bindsym $mod+x exec keepassxc
bindsym $mod+d exec $menu
bindsym $mod+w exec $browser
bindsym $mod+r exec $file-manager
bindsym $mod+Return exec $term
bindsym $mod+Shift+Return exec wezterm --class="termfloat"
#bindsym $mod+Shift+e exec bemoji

bindsym $mod+Shift+r reload
bindsym $mod+q kill
bindsym $mod+b exec killall -SIGUSR1 waybar
bindsym $mod+Shift+q exec wlogout


bindsym $mod+slash workspace back_and_forth
bindsym $mod+period workspace next
bindsym $mod+comma workspace prev


bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
# bindsym XF86MonBrightnessUp exec light -A 5
# bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Shift+n exec swaync-client -t -sw

output * adaptive_sync off


