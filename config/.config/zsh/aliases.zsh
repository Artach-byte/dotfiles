# Aliases for ZSH
alias zshreload='source ~/.zshrc' # reload ZSH

# Dirs
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# ls
alias ls='ls --color'

# Eza
alias l="eza -l --icons --git -a"
alias lt="eza --tree --level=2 --long --icons --git"

# lazygit
alias lg='lazygit'

#filemanager
alias fm='yazi'
